<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GenerateQRCode"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" Width="400">
            <TextBox x:Name="Input" Height="35"></TextBox>
            <Button Content="QR" Click="Start_GenerateQR" Height="35" Margin="0 24"></Button>
            <Image Name="MyQRCodeImage" HorizontalAlignment="Center" VerticalAlignment="Center" Height="250" Width="250"/>
        </StackPanel>
    </Grid>
</Window>
